// جلب مباريات اليوم تلقائياً
// =======================

// الحصول على تاريخ اليوم بصيغة YYYY-MM-DD
function getTodayDate() {
    const today = new Date();
    const year = today.getFullYear();
    const month = String(today.getMonth() + 1).padStart(2, '0'); // +1 لأن الشهور تبدأ من 0
    const day = String(today.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
}

// رابط API مع التاريخ الحالي
const date = getTodayDate();
const apiUrl = `https://www.messisporat.com/matches/npm/?date=${date}&lang=27&time=+02:00`;

// جلب البيانات وعرضها
async function fetchMatches() {
    try {
        const response = await fetch(apiUrl);
        const data = await response.json();

        // عرض النتائج في الكونسول
        console.log("مباريات اليوم:", data);

        // مثال: عرض أسماء الفرق والنتيجة (إذا موجودة)
        data.forEach(match => {
            console.log(`${match.team1} vs ${match.team2} - ${match.score || "لم تُلعب بعد"}`);
        });
    } catch (error) {
        console.error("حدث خطأ أثناء جلب المباريات:", error);
    }
}

// استدعاء الدالة
fetchMatches();
